// Маршрут для получения всех пользователей
app.get('/get-users', (req, res) => {
    // Находим всех пользователей в базе данных
    User.find({}, (err, users) => {
        if (err) {
            console.log(err);
            res.send('Ошибка при получении пользователей');
        } else {
            res.json(users);
        }
    });
});

// Слушаем порт 3000
app.listen(port, () => {
    console.log(`Сервер запущен на http://localhost:${port}`);
});
